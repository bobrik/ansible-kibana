{% if kibana_nginx_enable_ssl %}
server {
    listen {{ kibana_nginx_listen }};
    server_name {{ kibana_nginx_server_name }};

    return 301 https://{{ kibana_nginx_server_name }}$request_uri;
}
{% endif %}

server {
    {% if kibana_nginx_enable_ssl %}
    listen {{ kibana_nginx_listen }}:443 ssl;
    {% else %}
    listen {{ kibana_nginx_listen }};
    {% endif %}

    server_name {{ kibana_nginx_server_name }};

    {% if kibana_nginx_enable_ssl %}
    ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_certificate {{ kibana_nginx_ssl_cert_path }};
    ssl_certificate_key {{ kibana_nginx_ssl_key_path }};
    ssl_ciphers ALL:!aNULL:!ADH:!eNULL:!LOW:!EXP:RC4+RSA:+HIGH:+MEDIUM;
    ssl_session_cache shared:SSL:10m;
    {% endif %}

    proxy_read_timeout 120s; # slow queries happen

    {% if kibana_nginx_access_log %}
    access_log {{ kibana_nginx_access_log }};
    {% endif %}

    {% if kibana_nginx_error_log %}
    error_log {{ kibana_nginx_error_log }};
    {% endif %}

    {% if kibana_nginx_http_auth_file %}
    auth_basic "Beep boop, password please!";
    auth_basic_user_file {{ kibana_nginx_http_auth_file }};
    {% endif %}

    expires -1;

    location / {
        root {{ kibana_root_path }}/dist;
    }

    location /es/ {
        rewrite ^/es/_nodes$ /_nodes break;
        rewrite ^/es/(.*/_aliases)$ /$1 break;
        rewrite ^/es/(.*/_mapping)$ /$1 break;
        rewrite ^/es/(.*/_mapping/field/\*)$ /$1 break;
        return 403;

        limit_except GET {
            deny all;
        }

        proxy_pass {{ kibana_elasticsearch_url }};
    }

    location ~ ^/es/(.*/_search)$ {
        rewrite ^/es/(.*/_search)$ /$1 break;

        limit_except POST {
            deny all;
        }

        proxy_pass {{ kibana_elasticsearch_url }};
    }

    location /es/{{ kibana_index }}/ {
        rewrite ^/es/({{ kibana_index }}/.*)$ /$1 break;
        proxy_pass {{ kibana_elasticsearch_url }};
    }

}
